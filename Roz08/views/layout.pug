doctype html
mixin item(title, url)
  li(class='list-item')
    a(href=url class=`item ${path == url ? 'active' : ''}`)=title

html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    span=path
    nav
      ul
        +item('Strona główna', '/')
        +item('Aktualnosci', '/news')
        +item('Quiz', '/quiz')
        +item('Admin', '/admin')

    block content

